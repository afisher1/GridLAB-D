//
// Test purpose: validating internal_gains calculation over time; verifies
// that the code uses the following equation correctly:
//	internal_gains = power*heat_fraction
//
// Payroll: d3y332

clock {
	timestamp '2000-01-01 0:00:00';
	stoptime '2000-01-02 1:00:00';
	timezone PST+8PDT;
}

module tape;
module residential;
module assert;


object house {
	floor_area 1500 sf;
	cooling_setpoint 100; // turns of HVAC
	heating_setpoint 1;
	object plugload {
		constant_power .1;
		object player {
			file ..\generic_demand.glt;
			loop 24;
			property demand;
		};
		object double_assert {
			target "internal_gains";
			within 0.000001;
			object player {
				property value;
				file ..\plugload_internal_gains.player;
			};
		};
		object recorder {
			file "plugload_load_usage3600.csv";
			interval 3600;
			limit 28;
			property demand,enduse_load,heat_fraction,internal_gains;
		};
	};
}




