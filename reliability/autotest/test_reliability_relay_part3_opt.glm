//test_reliability_relay_part3.glm

//This glm contains a 4 node test feeder with a wye-wye step down transformer with loads shown below and a relay object
//placed in between node 1 and the line 1-2.

// 1			   2			   3			   4			
// |_______________________|__________} {__________|_______________________|________} {____________			
// |  			   |	      } {          |			   |_       } {            |     			
//									     |	      		   |			
//								          (meter)	     (triplex meter)			
//								             |			   |			
//								           (load) 	     (triplex node) 			 

//This reliability test only affects the relays in the system.
//This glm will check ASIDI, MAIFI, MAFIFIE, and ASAI.

#set randomseed=1;//fixing the seed insures that the same event times are displayed every time the glm is run

module assert;
module tape;
module powerflow;
module reliability;



clock {
	timestamp '2000-01-01 0:00:00';
	stoptime '2001-01-01 1:00:00';
	timezone PST+8PDT;
}

object metrics {
	name Metrics;
	report_file "rely3.txt";
	n 7;
	object double_assert {
		target "ASIDI";
		in '2001-01-01 0:00:00';
		once ONCE_TRUE;
		value 372.89;
		within 0.01;
	};
	object double_assert {
		target "MAIFI";
		in '2001-01-01 0:00:00';
		once ONCE_TRUE;
		value 4278.00;
		within 0.01;
	};
	object double_assert {
		target "MAIFIE";
		in '2001-01-01 0:00:00';
		once ONCE_TRUE;
		value 58.00;
		within 0.01;
	};
	object double_assert {
		target "ASAI";
		in '2001-01-01 0:00:00';
		once ONCE_TRUE;
		value 0.9992906;
		within 0.0000001;
	};
}

object eventgen {
	name OpenLine;
	parent Metrics;
	frequency 25;
	duration 300;
	group "class=relay";
	targets "recloser_event";
	values "TRUE";
}		



////////////////////////////////////////////////////////////////////////////////////////////////////////////////
// 4 Node Feeder: Balanced step-down wye-wye
////////////////////////////////////////////////////////////////////////////////////////////////////////////////

object overhead_line_conductor {
	name OH100;
	geometric_mean_radius 0.0244;
	resistance 0.306;
}

object overhead_line_conductor {
	name OH101;
	geometric_mean_radius 0.00814;
	resistance 0.592;
}

object line_spacing {
	name LS200;
	distance_AB 2.5;
	distance_BC 4.5;
	distance_AC 7.0;
	distance_AN 5.656854;
	distance_BN 4.272002;
	distance_CN 5.0;
}

object line_configuration {
	name LC300;
	conductor_A OH100;
	conductor_B OH100;
	conductor_C OH100;
	conductor_N OH101;
	spacing LS200;
}

object transformer_configuration {
	name XFC400;
	connect_type 1;
	power_rating 6000;
	primary_voltage 12470;
	secondary_voltage 4160;
	resistance 0.01;
	reactance 0.06;
}

object transformer_configuration {
	name PoleTop;
	connect_type 5;
	power_rating 400;
	powerA_rating 400;
	primary_voltage 4160;
	secondary_voltage 207.846;
	resistance 0.01;
	reactance 0.06;
}

object node {
	name Node1;
	phases "ABCN";
	voltage_A +7199.558+0.000d;
	voltage_B +7199.558-120.0d;
	voltage_C +7199.558+120.0d;
	nominal_voltage 7200;
}

object relay {
	name Relay;
	phases "ABCN";
	recloser_limit 300;
	recloser_delay 1;
	from Node1;
	to Node1a;
}

object node {
	name Node1a;
	phases "ABCN";
	voltage_A +7199.558+0.000d;
	voltage_B +7199.558-120.0d;
	voltage_C +7199.558+120.0d;
	nominal_voltage 7200;
}

object overhead_line {
	name Link12;
	phases "ABCN";
	from Node1a;
	to Node2;
	length 2000;
	configuration LC300;
}

object node {
	name Node2;
	phases "ABCN";
	voltage_A +7199.558+0.000d;
	voltage_B +7199.558-120.0d;
	voltage_C +7199.558+120.0d;
	nominal_voltage 7200;
}

object transformer {
	name Link23;
	phases "ABCN";
	from Node2;
	to Node3;
	configuration XFC400;
}

object node {
	name Node3;
	phases "ABCN";
	voltage_A +2401.777+0.000d;
	voltage_B +2401.777-120.0d;
	voltage_C +2401.777+120.0d;
	nominal_voltage 2400;
}

object overhead_line {
	name Link34;
	phases "ABCN";
	from Node3;
	to Node4;
	length 2500;
	configuration LC300;
}

object node {
	name Node4;
	phases "ABCN";
	voltage_A +2401.777+0.000d;
	voltage_B +2401.777-120.0d;
	voltage_C +2401.777+120.0d;
	nominal_voltage 2400;
}

object transformer {
	name Link45;
	phases "AS";
	from Node4;
	to Meter;
	configuration PoleTop;
}
	
module tape;

////////////////////////////////////////////////////////////////////////////////////////////////////////////////


object triplex_meter {
	name Meter;
	nominal_voltage 120;
	phases "AS";
}

object triplex_node {
	name Triplex_node;
	parent Meter;
	phases "AS";
	nominal_voltage 120;
	power_1 130000.000+12000j;
}

object load {
	name Load;
	parent load_meter;
	phases "ABCN";
	voltage_A +2401.777+0.000d;
	voltage_B +2401.777-120.0d;
	voltage_C +2401.777+120.0d;
	constant_power_A +1800000.000+668131.724j;
	constant_power_B +1800000.000+668131.724j;
	constant_power_C +1800000.000+668131.724j;
	nominal_voltage 2400;
}

object meter {
	name load_meter;
	parent Node4;
	nominal_voltage 2400;
	phases "ABCN";
}

object recorder {
	name node_recorder;
	parent Node4;
	property voltage_A;
	file "node.csv";
	interval 3600;
	limit 8784;
}

