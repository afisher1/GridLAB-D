
module climate;
module tape;

#set signal_timeout=15000

clock {
	timestamp '2006-04-01 0:00:00';
	timezone PST+8PDT;
}

instance localhost {
	model "slave.glm";
	weather1:temperature -> station:temperature;
	weather1:humidity <- station:humidity;
}

object climate {
	name weather1;
}

#ifdef TWO
instance localhost {
	model "slave.glm";
	weather2:temperature -> station:temperature;
	weather2:humidity <- station:humidity;
}

object climate {
	name weather2;
	temperature 65;
	humidity 75%;
	object recorder{
		name mls_master;
		property temperature,humidity;
		interval 3600;
		limit 24;
	};
}
#endif

