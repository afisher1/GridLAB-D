// test schedule transforms

clock {
	timezone PST+8PDT;
	starttime '2009-01-01 0:00:00 PST';
	stoptime '2009-01-02 0:00:00 PST';
}
schedule test_schedule {
	* 9-17 * * 1-5
}
module residential {
	default_outdoor_temperature 50;
}
module tape;
object house {
	name test_house;
	cooling_setpoint 3*test_schedule + 75;
	heating_setpoint -3*test_schedule + 70;
	object recorder {
		property heating_setpoint,air_temperature,system_mode,cooling_setpoint;
		interval 60;
		file air_temperature.csv;
	};
}
