object auction {
	name Market;
	unit "kW";
	type DOUBLE;
	period 3600;
	verbose TRUE;
	pricecap 9999;
	object recorder {
		property last.P,last.Q,next.P,next.Q,avg24,std24,avg72,std72,avg168,std168;
		file "test_market_auction.csv";
		interval 3600;
		limit 8760;
	};
	object double_assert {
		target avg24;
		in '2006-01-03 00:00:00';
		once ONCE_TRUE;
		value 27.7083;
		within 1e-4;
	};
		object double_assert {
		target avg72;
		in '2006-01-07 00:00:00';
		once ONCE_TRUE;
		value 27.7083;
		within 1e-4;
	};
	object double_assert {
		target avg168;
		in '2006-01-11 00:00:00';
		once ONCE_TRUE;
		value 27.7083;
		within 1e-4;
	};
	object double_assert {
		target std24;
		in '2006-01-03 00:00:00';
		once ONCE_TRUE;
		value 9.0115;
		within 1e-4;
	};
	object double_assert {
		target std72;
		in '2006-01-07 00:00:00';
		once ONCE_TRUE;
		value 9.0115;
		within 1e-4;
	};
	object double_assert {
		target std168;
		in '2006-01-11 00:00:00';
		once ONCE_TRUE;
		value 9.0115;
		within 1e-4;
	};
	object double_assert{
		target next.P;
		in '2006-01-02 00:00:00';
		once ONCE_TRUE;
		value clear_price*1;
		within 0.1;
	};
	object double_assert {
		target next.Q;
		in '2006-01-02 00:00:00';
		once ONCE_TRUE;
		value clear_quantity*1;
		within 0.1;
	};
}
 
 class test {
	int64 next_t;
	double bid_period;
	int16 count;
	object market;
	enumeration {BUYER=0, SELLER=1} role;
	int32 lastbid_id;
	int64 lastmkt_id;
	double price;		//Added in so price can be specified
	double quantity;	//Added in so quantity can be specified
	public int64 *thismkt_id;
	function auction::submit_bid;
	intrinsic create (object parent)
	{
		return SUCCESS;
	};
	intrinsic init (object parent)
	{
		next_t = 0;
		lastbid_id = -1;
		lastmkt_id = -1;
		if (market==NULL)
			throw "market is not defined";
		thismkt_id = (int64*)gl_get_addr(market,"market_id");
		if (thismkt_id==NULL)
			throw "market does not define market_id";
		return SUCCESS;
	};
	intrinsic sync (TIMESTAMP t0, TIMESTAMP t1)
	{
		if (t1==next_t || next_t==0)
		{
			next_t=t1+bid_period;
			lastbid_id = (int32)submit_bid(market,my,role==BUYER?-quantity:quantity,price,*thismkt_id!=lastmkt_id?-1:lastbid_id);
			count--;
			lastmkt_id = *thismkt_id;
		}
		if (count>0)
			return next_t;
		else
			return TS_NEVER;
	};
}

